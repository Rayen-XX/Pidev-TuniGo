<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="630.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.GestionMenuController">
    <!-- Sidebar (Menu Vertical) -->
    <ToolBar layoutY="74.0" orientation="VERTICAL" prefHeight="556.0" prefWidth="100.0">
        <Box depth="100" height="100" opacity="0.0" width="100" />

        <Button fx:id="btnBus" contentDisplay="CENTER" lineSpacing="30.0" onAction="#goToBus" prefHeight="35.0" prefWidth="130.0" text="Gestion Bus" />
        <Button fx:id="btnTrain" onAction="#goToTrain" prefHeight="35.0" prefWidth="130.0" text="Gestion Train" />
        <Button fx:id="btnMetro" onAction="#goToMetro" prefHeight="35.0" prefWidth="130.0" text="Gestion Metro" />
        <Button fx:id="btnScooter" onAction="#goToScooter" prefHeight="35.0" prefWidth="130.0" text="Gestion Scooter" />
        <Button fx:id="btnTaxi" onAction="#goToTaxi" prefHeight="35.0" prefWidth="130.0" text="Gestion Taxi" />
        <Button fx:id="btnReclamation" onAction="#goToReclamation" prefHeight="35.0" prefWidth="130.0" text="Gestion Reclamation" />
        <Button fx:id="btnReclamationuser" onAction="#goToReclamationuser" prefHeight="35.0" prefWidth="130.0" text="Add Reclamation" />
    </ToolBar>

    <!-- AppBar (ToolBar horizontale) avec l'image et les autres éléments -->
    <ToolBar orientation="HORIZONTAL" prefHeight="78.0" prefWidth="1000.0">
        <items>
            <!-- Image dans la ToolBar -->
            <ImageView fitHeight="66.0" fitWidth="98.0">
                <image>
                    <Image url="@/Images/TuniGo_Logo.png" />
                </image>
            </ImageView>
      
          <!-- Logo (placé dans la topbar, ajusté avec une position correcte) -->
          <ImageView fitHeight="60.0" fitWidth="82.0" pickOnBounds="true" preserveRatio="true" />
            <!-- Vous pouvez ajouter d'autres éléments ici -->
        </items>
    </ToolBar>
</AnchorPane>
