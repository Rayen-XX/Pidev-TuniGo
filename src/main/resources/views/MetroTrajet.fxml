<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MetroTrajetController" spacing="10" padding="10">
   <Label text="Gestion des Trajets Métro" font="Arial 24" />

   <TableView fx:id="table">
      <columns>
         <TableColumn text="ID" fx:id="colId" />
         <TableColumn text="Gare Départ" fx:id="colGdepart" />
         <TableColumn text="Gare Arrivée" fx:id="colGarrive" />
         <TableColumn text="Heure Départ" fx:id="colHdepart" />
         <TableColumn text="Heure Arrivée" fx:id="colHarive" />
      </columns>
   </TableView>

   <HBox spacing="10">
      <VBox spacing="10">
         <Label text="Gare Départ:" />
         <TextField fx:id="tfGdepart" />
         <Label text="Gare Arrivée:" />
         <TextField fx:id="tfGarrive" />
      </VBox>
      <VBox spacing="10">
         <Label text="Heure Départ (HH:MM):" />
         <TextField fx:id="tfHdepart" />
         <Label text="Heure Arrivée (HH:MM):" />
         <TextField fx:id="tfHarive" />
      </VBox>
   </HBox>

   <HBox spacing="10">
      <Button text="Ajouter" fx:id="btnAjouter" onAction="#ajouterTrajetmetro" />
      <Button text="Modifier" fx:id="btnModifier" onAction="#modifierTrajetmetro" />
      <Button text="Supprimer" fx:id="btnSupprimer" onAction="#supprimerTrajetmetro" />
      <Button text="Annuler" fx:id="btnAnnuler" onAction="#annulerTrajetmetro" />
   </HBox>
</VBox>