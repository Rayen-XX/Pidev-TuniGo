<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esprit.gu.controller.RegisterController"
            minWidth="800" minHeight="600">
    <children>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 40;"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label text="Register" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #B22222;"/>
                <TextField fx:id="nomField" promptText="Nom" maxWidth="300"
                           style="-fx-background-color: #f5f5f5; -fx-border-color: #B22222; -fx-border-width: 1; -fx-border-radius: 5; -fx-font-size: 16px; -fx-text-fill: #333; -fx-padding: 10;"/>
                <Label fx:id="nomErrorLabel" text="Name is required" textFill="red" visible="false"/>
                <TextField fx:id="prenomField" promptText="Prenom" maxWidth="300"
                           style="-fx-background-color: #f5f5f5; -fx-border-color: #B22222; -fx-border-width: 1; -fx-border-radius: 5; -fx-font-size: 16px; -fx-text-fill: #333; -fx-padding: 10;"/>
                <Label fx:id="prenomErrorLabel" text="Prenom is required" textFill="red" visible="false"/>
                <TextField fx:id="emailField" promptText="Email" maxWidth="300"
                           style="-fx-background-color: #f5f5f5; -fx-border-color: #B22222; -fx-border-width: 1; -fx-border-radius: 5; -fx-font-size: 16px; -fx-text-fill: #333; -fx-padding: 10;"/>
                <Label fx:id="emailErrorLabel" text="Invalid email address" textFill="red" visible="false"/>
                <PasswordField fx:id="motdepasseField" promptText="Password" maxWidth="300"
                               style="-fx-background-color: #f5f5f5; -fx-border-color: #B22222; -fx-border-width: 1; -fx-border-radius: 5; -fx-font-size: 16px; -fx-text-fill: #333; -fx-padding: 10;"/>
                <Label fx:id="motdepasseErrorLabel" text="Password must be at least 6 characters" textFill="red" visible="false"/>
                <TextField fx:id="telephoneField" promptText="Phone Number" maxWidth="300"
                           style="-fx-background-color: #f5f5f5; -fx-border-color: #B22222; -fx-border-width: 1; -fx-border-radius: 5; -fx-font-size: 16px; -fx-text-fill: #333; -fx-padding: 10;"/>
                <Label fx:id="telephoneErrorLabel" text="Invalid phone number" textFill="red" visible="false"/>
                <Button text="Register" onAction="#handleRegister"
                        style="-fx-background-color: #B22222; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 20;"/>
                <Hyperlink text="Already have an account? Login" onAction="#goToLogin"
                           style="-fx-text-fill: #B22222; -fx-font-size: 14px;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
