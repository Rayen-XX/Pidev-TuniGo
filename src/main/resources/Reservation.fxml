<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ReservationController">

    <!-- MenuBar en haut -->
    <top>
        <MenuBar>
            <Menu text="Opérations">
                <MenuItem text="Ajouter Réservation" onAction="#showAddSection" />
                <MenuItem text="Afficher, Modifier et Supprimer" onAction="#showListSection" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Section principale -->
    <center>
        <StackPane fx:id="mainContainer">
            <!-- Section Ajout -->
            <VBox fx:id="addSection" spacing="10" alignment="CENTER" visible="true">
                <Label text="Ajouter une Réservation" style="-fx-font-size: 18px;" />
                <GridPane hgap="10" vgap="10">
                    <Label text="ID User:" />
                    <TextField fx:id="idUserField" promptText="Entrez ID utilisateur" />
                    <Label text="ID Trajet:" GridPane.rowIndex="1" />
                    <TextField fx:id="idTrajetField" GridPane.rowIndex="1" promptText="Entrez ID trajet" />
                    <Label text="Date Début:" GridPane.rowIndex="2" />
                    <TextField fx:id="dateDebutField" GridPane.rowIndex="2" promptText="YYYY-MM-DD" />
                    <Label text="Date Fin:" GridPane.rowIndex="3" />
                    <TextField fx:id="dateFinField" GridPane.rowIndex="3" promptText="YYYY-MM-DD" />
                    <Label text="Montant:" GridPane.rowIndex="4" />
                    <TextField fx:id="montantField" GridPane.rowIndex="4" promptText="Entrez le montant" />
                    <Label text="Statut:" GridPane.rowIndex="5" />
                    <TextField fx:id="statutField" GridPane.rowIndex="5" promptText="Entrez le statut" />
                </GridPane>
                <Button text="Ajouter Réservation" onAction="#ajouterReservation" />
            </VBox>

            <!-- Section Affichage, Modification, Suppression -->
            <VBox fx:id="listSection" spacing="10" alignment="CENTER" visible="false">
                <Label text="Liste des Réservations" style="-fx-font-size: 18px;" />
                <ListView fx:id="reservationListView" prefHeight="200" onMouseClicked="#handleReservationSelection" />
                <Button text="Supprimer Sélection" onAction="#supprimerReservation" />

                <GridPane hgap="10" vgap="10">
                    <Label text="Modification : Sélectionnez une réservation" style="-fx-font-size: 14px;" />
                    <Label text="ID:" />
                    <TextField fx:id="editIdField" editable="false" promptText="ID sélectionné" />
                    <Label text="Date Début:" GridPane.rowIndex="1" />
                    <TextField fx:id="editDateDebutField" GridPane.rowIndex="1" promptText="YYYY-MM-DD" />
                    <Label text="Date Fin:" GridPane.rowIndex="2" />
                    <TextField fx:id="editDateFinField" GridPane.rowIndex="2" promptText="YYYY-MM-DD" />
                    <Label text="Montant:" GridPane.rowIndex="3" />
                    <TextField fx:id="editMontantField" GridPane.rowIndex="3" promptText="Montant" />
                    <Label text="Statut:" GridPane.rowIndex="4" />
                    <TextField fx:id="editStatutField" GridPane.rowIndex="4" promptText="Statut" />
                </GridPane>
                <Button text="Modifier Réservation" onAction="#modifierReservation" />
            </VBox>
        </StackPane>
    </center>

</BorderPane>