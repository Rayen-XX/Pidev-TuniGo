<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReservationParkingController">
    <VBox layoutX="0.0" layoutY="0.0" prefHeight="400.0" prefWidth="179.0" style="-fx-background-color: #ffcccc; padding: 20px;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ff0000;" text="Welcome to TuniGo" />

        <Button fx:id="parkingButton" onAction="#handleParking" prefHeight="26.0" prefWidth="122.0" style="-fx-background-color: #ff6666; -fx-text-fill: white; margin-top: 20px;" text="Parking" />

        <!-- Ajout d'un espace (spacer) entre les boutons -->
        <Region style="-fx-min-height: 10px;" />

        <Button fx:id="reservationButton" onAction="#handleReservationParking" style="-fx-background-color: #ff6666; -fx-text-fill: white;" text="Reservation Parking" />
        <!-- Ajout d'un espace (spacer) entre les boutons -->
        <Region style="-fx-min-height: 10px;" />

        <Button fx:id="ListereservationButton" onAction="#handleListeReservationParking" prefHeight="26.0" prefWidth="121.0" style="-fx-background-color: #ff6666; -fx-text-fill: white;" text="Liste Reservations" />
    </VBox>

    <VBox alignment="CENTER" layoutX="179.0" prefHeight="401.0" prefWidth="491.0" spacing="10" style="-fx-background-color: white; padding: 10px; border-color: #ff0000; border-width: 2;">
        <ComboBox fx:id="localisationComboBox" promptText="Localisation du Parking" prefWidth="200.0" style="-fx-background-color: #ff6262; margin-top: 20px;" />

        <!-- Liste déroulante pour sélectionner un parking -->
        <ComboBox fx:id="parkingComboBox" promptText="Nom du Parking" prefWidth="200.0" style="-fx-background-color: #ff6262; margin-top: 20px;" />

        <!-- Sélecteur de date pour la réservation -->
        <DatePicker fx:id="datePicker" prefWidth="200.0" style="-fx-background-color: #ff6262; margin-top: 20px;" />

        <!-- ComboBox pour l'heure de la réservation -->
        <ComboBox fx:id="timeComboBox" promptText="Sélectionnez l'heure" prefWidth="200.0" style="-fx-background-color: #ff6262; margin-top: 20px;" />

        <!-- Bouton pour effectuer la réservation -->
        <Button fx:id="reservationParking" onAction="#ReservationParking" style="-fx-background-color: #ff6666; -fx-text-fill: white; margin-top: 20px;" text="Reserve Parking" />
    </VBox>
</AnchorPane>
